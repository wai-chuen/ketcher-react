currentStyle || defaultFontSize);\r\n    }, [currentStyle]);\r\n    const MIN_FONT_SIZE = 4;\r\n    const MAX_FONT_SIZE = 144;\r\n    const fontSizes = range(MIN_FONT_SIZE, MAX_FONT_SIZE + 1);\r\n    const fontSizeOptions = useMemo(() => fontSizes.map((fontSize) => (_jsx(\"div\", { className: classes.fontSizeOption, onMouseDown: (e) => setFontSize(e, `${fontSize}px`), children: fontSize }, fontSize))), [isShowingFontSizeMenu]);\r\n    return (_jsxs(\"div\", { ref: wrapperRef, children: [_jsx(\"button\", { className: classes.fontBtn, onMouseDown: (e) => {\r\n                    e.preventDefault();\r\n                    setIsShowingFontSizeMenu(!isShowingFontSizeMenu);\r\n                }, children: parseFloat(currentFontSize) }), isShowingFontSizeMenu ? (_jsx(\"div\", { className: classes.fontSizeMenu, children: fontSizeOptions })) : null] }));\r\n};\r\nexport default FontControl;\r\n//# sourceMappingURL=FontControl.js.map","references":["/usr/local/google/home/waich/workspace/ketcher/node_modules/@types/react/index.d.ts","/usr/local/google/home/waich/workspace/ketcher/packages/ketcher-react/src/hooks/useClickOutside.ts","/usr/local/google/home/waich/workspace/ketcher/node_modules/@types/lodash/fp.d.ts"],"map":"{\"version\":3,\"file\":\"FontControl.js\",\"sourceRoot\":\"\",\"sources\":[\"../../../../../../../../../../../src/script/ui/views/modal/components/Text/FontControl/FontControl.tsx\"],\"names\":[],\"mappings\":\";AAAA;;;;;;;;;;;;;;6EAc6E;AAE7E,OAAO,EAAE,SAAS,EAAE,OAAO,EAAE,QAAQ,EAAE,MAAM,EAAE,MAAM,OAAO,CAAA;AAC5D,OAAO,EAAE,eAAe,EAAE,MAAM,4CAA4C,CAAA;AAE5E,OAAO,OAAO,MAAM,2BAA2B,CAAA;AAE/C,OAAO,EAAE,KAAK,EAAE,MAAM,WAAW,CAAA;AAEjC,MAAM,CAAC,MAAM,WAAW,GAAG,CAAC,EAAE,WAAW,EAAE,cAAc,EAAE,MAAM,EAAE,EAAE,EAAE;IACrE,MAAM,eAAe,GAAG,MAAM,CAAA;IAC9B,MAAM,CAAC,qBAAqB,EAAE,wBAAwB,CAAC,GAAG,QAAQ,CAAC,KAAK,CAAC,CAAA;IACzE,MAAM,CAAC,eAAe,EAAE,kBAAkB,CAAC,GAAG,QAAQ,CAAC,eAAe,CAAC,CAAA;IACvE,MAAM,UAAU,GAAG,MAAM,CAAiB,IAAI,CAAC,CAAA;IAC/C,MAAM,4BAA4B,GAAG,GAAS,EAAE,CAC9C,wBAAwB